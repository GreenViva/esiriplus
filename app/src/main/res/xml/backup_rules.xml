<?xml version="1.0" encoding="utf-8"?>
<!--
   Backup rules for Android < API 31.
   See https://developer.android.com/guide/topics/data/autobackup
   Note: This file is ignored for devices running API 31+
-->
<full-backup-content>
    <include domain="sharedpref" path="." />
    <!-- Exclude encrypted token storage -->
    <exclude domain="sharedpref" path="esiriplus_encrypted_tokens.xml" />
    <exclude domain="sharedpref" path="esiriplus_db_passphrase.xml" />
    <!-- Exclude the encrypted database (cannot be restored without keystore) -->
    <exclude domain="database" path="esiriplus.db" />
    <exclude domain="database" path="esiriplus.db-journal" />
    <exclude domain="database" path="esiriplus.db-wal" />
    <exclude domain="database" path="esiriplus.db-shm" />
</full-backup-content>
